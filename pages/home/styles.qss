/* QLabel Style */
QLabel#subtitle {
    font-size: 18px;
    font-weight: bold;
}

QLabel#featureTitle {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 5px;
}

/* QFrame Style */
QFrame#aboutTextFrame, QFrame#featureBox {
    background-color: #F9FBFF;  /* light background */
    border: 1px solid #cccccc;
    border-radius: 5px;
}